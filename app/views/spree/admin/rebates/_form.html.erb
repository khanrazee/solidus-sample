<div data-hook="admin_rebate_form_fields" class="row">
  <div class="twelve columns">
    <%= f.field_container :url do %>
      <%= f.label :url %>
      <%= f.text_field :url, class: 'fullwidth' %>
      <%= error_message_on :rebate, :url %>
    <% end %>
    <%= f.field_container :title do %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'fullwidth' %>
      <%= error_message_on :rebate, :title %>
    <% end %>
    <%= f.field_container :total_available do %>
      <%= f.label :total_available %>
      <%= f.number_field :total_available, class: 'fullwidth' %>
      <%= error_message_on :rebate, :total_available %>
    <% end %>
    <%= f.field_container :start_at do %>
      <%= f.label :start_at %>
      <%= f.datetime_select :start_at, class: 'fullwidth' %>
      <%= error_message_on :rebate, :start_at %>
    <% end %>
    <%= f.field_container :end_at do %>
      <%= f.label :end_at %>
      <%= f.datetime_select :end_at, class: 'fullwidth' %>
      <%= error_message_on :rebate, :end_at %>
    <% end %>
    <%= f.field_container :brand_name do %>
      <%= f.label :brand_name %>
      <%= f.text_field :brand_name, class: 'fullwidth' %>
      <%= error_message_on :rebate, :brand_name %>
    <% end %>
  </div>
</div>
